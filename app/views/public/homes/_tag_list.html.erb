<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 my-4">
  <% @tags.each do |tag| %>
    <div class="col mb-2">
      <div class="card">
        <div class="card-body p-2">
          <%= link_to "#{tag.name}(#{tag.posts.count})", tag_search_path(tag_id: tag.id), method: :get %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row justify-content-end mr-3">
  >><%= paginate @tags, remote: true, class: 'pagination', id: 'pagination' %>
</div>
