<h1><%= @user.name%>さんのページ</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<%= link_to '登録情報編集はこちら',edit_user_path(@user.id) %>

<h2>投稿一覧</h2>
  <table>
    <% @posts.each do |post| %>
    <tr>  
      <td><%= link_to post.title, post_path(post.id) %></td>
    <% end %>
    </tr>
  </table>


