<%= stylesheet_link_tag "application" %>

<div class="container text-center">
  <div class="row justify-content-center my-3">
    <div class="col-md-8">
      <h3>投稿編集</h3>
      <%= form_with model: @post do |f| %>
        <%= render 'layouts/errors_messages', model: f.object %>
        <div class="form-group text-left">
          <label for="inputTitle">タイトル</label>
          <%=f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group text-left">
          <label for="inputContent">本文</label>
          <%= f.rich_text_area :content, class: "form-control", style: "height: auto; overflow-y: auto;" %>
        </div>
        <div class="form-group text-left">
          <label for="inputContent">カテゴリー&nbsp;※必須</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"}, {class: "form-control"} %>
        </div>
        <div class="form-group text-left">
          <label for="inputContent">タグ（,で区切ると複数タグ登録できます。最大50文字以内）</label>
          <%= f.text_field :name,value: @tag_list, class: 'form-control' %>
        </div>
        <div class="form-group text-left">
          <label for="inputContent">公開範囲</label>
          <%= f.radio_button :status, :published %>
            <%= f.label :status_published, "公開" %>
          <%= f.radio_button :status, :unpublished %>
          <%= f.label :status_unpublished, "非公開" %>
          <%= f.radio_button :status, :draft %>
            <%= f.label :status_draft, "下書き" %>
        </div>
        <%= f.submit '編集', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
