  <% if user_signed_in? %>
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "#{options[:class]} btn btn-info btn-#{options[:button_size]}" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "#{options[:class]} btn btn-success btn-#{options[:button_size]}" %>
      <% end %>
    <% end %>
  <% end %>