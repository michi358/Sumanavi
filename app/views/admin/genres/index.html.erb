<%= stylesheet_link_tag "admin_application" %>

<div class="container">
  <h3 class="m-3">ジャンル管理</h3>
  <div class="row shadow-lg my-3 p-3 rounded justify-content-center" style="background-color:white">
    <div class="col mx-auto text-center">
      <%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class: "btn btn-primary" %>
        <% end %>
      <table class="table text-center table-hover">
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>