<div class="container">
  <h3 class="m-3">ユーザー一覧</h3>
  <div class="row shadow-lg my-3 p-3 rounded justify-content-center" style="background-color:white">
    <div class="col mx-auto text-center">
      <table class="table text-center table-hover">
        <tr>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ユーザーステータス</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, admin_user_path(user.id), method: :get %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_active == true %>
              <p class="text-success"><b>有効</b></p>
            <% else %>
              <p class="text-black-50"><b>退会</b></p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>